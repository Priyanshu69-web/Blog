<h1 class="mb-4 text-center text-primary">Welcome to MyBlogSpace</h1>

<h3 class="mt-5 mb-3">Recent Blogs</h3>
<div class="list-group">
  <% if (recentPosts.length === 0) { %>
    <p>No recent posts available.</p>
  <% } else { %>
    <% recentPosts.forEach(post => { %>
      <a href="/posts/<%= post.id %>" class="list-group-item list-group-item-action">
        <h5 class="mb-1"><%= post.title %></h5>
        <p class="mb-1"><%= post.content.substring(0, 100) %>...</p>
        <small>Category: <%= post.category %> | Date: <%= post.createdAt.toLocaleString() %></small>
      </a>
    <% }) %>
  <% } %>
</div>

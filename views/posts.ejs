<h1 class="text-primary">All Blog Posts</h1>
<a href="/create-post" class="btn btn-success mb-3">Create New Post</a>

<% if (posts.length===0) { %>
  <p>No blogs available.</p>
  <% } else { %>
    <ul class="list-group">
      <% posts.forEach(post=> { %>
        <li class="list-group-item">
          <h2>
            <%= post.title %>
          </h2>
          <span class="badge bg-secondary mb-2">
            <%= post.category %>
          </span>
          <p>
            <%= post.content.substring(0, 150) %>...
          </p>
          <a href="/posts/<%= post.id %>" class="btn btn-outline-primary btn-sm">Read More</a>
          <a href="/posts/<%= post.id %>/edit" class="btn btn-warning btn-sm">Edit</a>

          <form action="/posts/<%= post.id %>/delete" method="POST" style="display: inline">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </li>
        <% }) %>
    </ul>
    <% } %>
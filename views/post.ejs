<h1 class="text-primary"><%= post.title %></h1>
<p class="text-muted">Category: <span class="badge bg-info"><%= post.category %></span></p>
<p><%= post.content %></p>
<a href="/posts" class="btn btn-secondary">Back to Blogs</a>
<hr class="my-4">
<h4>Comments</h4


<% if (comments.length === 0) { %>
  <p>No comments yet. Be the first to comment!</p>
<% } else { %>
  <ul class="list-group mb-4">
    <% comments.forEach(comment => { %>
      <li class="list-group-item">
        <strong><%= comment.name %>:</strong>
        <p><%= comment.comment %></p>
        <small class="text-muted"><%= comment.created_at.toLocaleString() %></small>
      </li>
    <% }) %>
  </ul>
<% } %>

<form action="/posts/<%= post.id %>/comment" method="POST" class="mt-4">
  <div class="mb-3">
    <label for="name" class="form-label">Your Name</label>
    <input type="text" class="form-control" name="name" required>
  </div>
  <div class="mb-3">
    <label for="comment" class="form-label">Your Comment</label>
    <textarea class="form-control" name="comment" rows="3" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Post Comment</button>
</form>

<a href="/posts" class="btn btn-secondary mt-4">‚Üê Back to Blogs</a>
